extends layout

block content
  h1=title

  form(method='POST' action='')
    div.form-group
      label(for='first_name') Etunimi:
      input#first_name.form-control(type='text' placeholder='Etunimi' name='first_name' required='true' value=(undefined===author ? '' : author.first_name) )
      label(for='last_name') Sukunimi:
      input#last_name.form-control(type='text' placeholder='Sukunimi' name='last_name' required='true' value=(undefined===author ? '' : author.last_name))
      label(for='nationality') Kansallisuus:
      input#nationality.form-control(type='text' placeholder='Kansallisuus esim. Suomi' name='nationality' required='true' value=(undefined===author ? '' : author.nationality))
    div.form-group
      label(for='date_of_birth') Syntymäaika:
      input#date_of_birth.form-control(type='date' name='date_of_birth' value=(undefined===author ? '' : author.date_of_birth) )
      label(for='date_of_death') kuolinaika:
      input#date_of_birth.form-control(type='date' name='date_of_death' value=(undefined===author ? '' : author.date_of_death) )
    button.btn.btn-primary(type='submit') Lähetä
  if errors 
    ul
      for error in errors
        li!= error.msg