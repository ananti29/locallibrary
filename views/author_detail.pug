extends layout

block content

  h1 Kirjailija: #{author.kokonimi}, #{author.kansallisuus}
  p #[strong Syntymäaika: ]#{author.ika_paiva_format}
  
  div(style='margin-left:20px;margin-top:20px')

    h4 Kirjat
    
    dl
      each book in authorsBooks
        dt 
        p #[strong Otsikko:] #[a(href=book.url) #{book.otsikko}]
        dd(style='margin-bottom: 15px') #[strong Tiivistelmä:] #{book.tiivistelma}
        
      else
        p Tämä kirjailija ei ole julkaissut kirjoja.
  hr
  p
    a(href=author.url+'/delete') Poista kirjailija
  p
    a(href=author.url+'/update') Päivitä kirjailija