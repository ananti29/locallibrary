extends layout

block content
  h1 #{title}: #{author.kokonimi}
  p= author.age_day_format
  
  if authorBooks.length
  
    p #[strong Poista seuraavat kirjat, jotta voit poistaa kirjailijan.]
  
    div(style='margin-left:20px;margin-top:20px')

      h4 Kirjat
    
      dl
      each book in authorBooks
        dt 
          a(href=book.url) #{book.otsikko}
        dd #{book.tiivistelma}

  else
    p Haluatko varmasti poistaa kyseisen kirjailijan?
    
    form(method='POST' action='')
      div.form-group
        input#authorid.form-control(type='hidden',name='authorid', required='true', value=author._id )

      button.btn.btn-primary(type='submit') Poista